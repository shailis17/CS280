PROGRAM circle;
	(*Missing Termination Value in For Statement *)
VAR
	(*Variable declarations*)
	r, a, p, b : REAL; 
	i, j, sum : INTEGER;	
BEGIN
	r := 8;
	p := 0;
	a := 0;
	sum := 0;
	j := -1;
	IF ( r > 5) THEN
	  	a := (3.14) + j * r
	ELSE
		p := 0;
		
	FOR i := 4 downto  do sum := sum + i;
	      
	(*Display the results*)
	WRITELN  ('The output results are ' , r, p, b);
END
