PROGRAM circle;
	(*Testing compatible mixed type assignments*)
VAR
	(*Variable declarations*)
	r, p, a : REAL; 
	str : String;
	b : INTEGER;
BEGIN
	r := 8;
	p := 4 ;
	IF ( p < 5) THEN
	  	a := (3.14) + r * p
	ELSE
		a := p;
	b := a;
	(*Display the results*)
	WRITELN  ('The output results are ' , r, ' ', p, ' ', a, ' ', b);
END
